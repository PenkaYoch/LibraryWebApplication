@model IEnumerable<LibraryWebApplication.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Книги</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookGenre.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookWriter.LastName)
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.WriterSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
            @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookGenre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookWriter.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
